#!/bin/bash

ansible-playbook -u ubuntu \
  -e cidr=`terraform output vpn_cidr` \
  -e fqdn=vpn.`terraform output domain` \
  -e "{\"static_routes\":[\"`terraform output vpc_cidr`\"]}" \
  -e "{\"hosts\":$(terraform output -json management_cluster_ips | jq -c '.value')}" \
  -i `terraform output vpn_public_ip`, \
  ansible/vpn.yml
